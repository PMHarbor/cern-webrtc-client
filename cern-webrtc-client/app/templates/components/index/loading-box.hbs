<div class="ui active dimmer">
  {{#if logEnabled}}
      <button class="right floated circular ui yellow icon button" {{action "displayFeedbackModal"}} title="{{t 'loading-box.send_us_feedback' }}">
          <i class="ui icon bug"></i>
      </button>
  {{/if}}
    <div class="app-loading">
        <div class="ui container">
            <div class="ui inverted segment">
                <p><img src="images/cern-logo-white-100.png" alt="CERN Logo"/></p>
                <div class="loading-steps">
                <p>
                  {{#if (is-equal webRTCSupported false) }}
                      <div class="ui red horizontal label">
                          {{t 'loading-box.error' }}
                      </div>
                  {{/if}}
                  {{#if webRTCSupported}}
                      <div class="ui green horizontal label">
                          {{t 'loading-box.ok' }}
                      </div>
                  {{/if}}
                  {{#if (is-equal webRTCSupported null)}}
                      <div class="ui active inline loader"></div>
                  {{/if}}
                    {{t 'loading-box.webrtc_supported' }}
                    </p>

                <p>
                  {{#if (is-equal microphoneAvailable false) }}
                      <div class="ui red horizontal label">
                          {{t 'loading-box.error' }}
                      </div>
                  {{/if}}
                  {{#if microphoneAvailable}}
                      <div class="ui green horizontal label">
                          {{t 'loading-box.ok' }}
                      </div>
                  {{/if}}
                  {{#if (is-equal microphoneAvailable null)}}
                      <div class="ui active inline loader"></div>
                  {{/if}}
                    {{t 'loading-box.microphone_detected' }}
                  {{#if (is-equal microphoneAvailable false) }}
                        {{t 'loading-box.allow_microphone_access' }}
                      <button class="ui mini primary button" {{action "verifyConfiguration"}}>{{t 'loading-box.try_again' }}</button>
                  {{/if}}
                    </p>

                <p>
                  {{#if (is-equal browserSupported false) }}
                      <div class="ui red horizontal label">
                          {{t 'loading-box.error' }}
                      </div>
                  {{/if}}
                  {{#if browserSupported}}
                      <div class="ui green horizontal label">
                          {{t 'loading-box.ok' }}
                      </div>
                  {{/if}}
                  {{#if (is-equal browserSupported null)}}
                      <div class="ui active inline loader"></div>
                  {{/if}}
                    {{t 'loading-box.browser_supported' }}
                    </p>

                <p>
                  {{#if (is-equal serverReachable false)}}
                      <div class="ui red horizontal label">
                          {{t 'loading-box.error' }}
                      </div>
                  {{/if}}
                  {{#if serverReachable}}
                      <div class="ui green horizontal label">
                        {{t 'loading-box.ok' }}
                      </div>
                  {{/if}}
                  {{#if (is-equal serverReachable null)}}
                      <div class="ui active inline loader"></div>
                  {{/if}}
                    {{t 'loading-box.session_manager_available' }}
                    </p>
                </div>
              {{#if errorsWhileLoading}}
                  <div class="actions">
                      <div class="two fluid ui inverted buttons">
                          <div class="ui basic inverted button" {{action "goToVidyoPortal"}}>
                              {{t 'loading-box.got_to_vidyoportal' }}
                          </div>
                          <div class="ui green basic inverted button" {{action "goToDownloads"}}>
                              {{t 'loading-box.use_another_vidyo_client' }}
                          </div>
                      </div>
                  </div>
              {{/if}}

              {{#if microphoneAvailable}}
                {{#if browserSupported}}
                  {{#if webRTCSupported}}
                    {{#if serverReachable}}
                        <p class="signup">{{t 'loading-box.everything_ok' }}</p>
                    {{/if}}
                  {{/if}}
                {{/if}}
              {{/if}}
              {{#if errorsWhileLoading}}
                  <p class="loading-finished">{{t 'loading-box.some_errors' }}</p>
              {{/if}}

            </div>
        </div>
    </div>
</div>
